# Docker Environment Variables

# Node Environment
NODE_ENV=production
REACT_APP_ENV=production

# Database Configuration
DB_NAME=law_firm
DB_USER=postgres
DB_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/law_firm

# Redis Cache
REDIS_URL=redis://:redis123@redis:6379
REDIS_PASSWORD=redis123

# JWT Secrets
JWT_SECRET=your_jwt_secret_key_here_change_in_production
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_change_in_production

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@lawfirm.com

# WhatsApp Integration
WHATSAPP_WEBHOOK_URL=https://api.whatsapp.com/send
WHATSAPP_API_KEY=your_whatsapp_api_key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_ALLOW_ALL=false

# Security
ENABLE_CAPTCHA=false
REQUIRE_HMAC=false
HMAC_SECRET=your_hmac_secret_key

# API Configuration
PORT=5000
REACT_APP_API_URL=http://backend:5000

# Feature Flags
ENABLE_2FA=true
ENABLE_TIME_TRACKING=true
ENABLE_COMMENTS=true
ENABLE_CACHING=true

# Logging
LOG_LEVEL=info
SECURITY_LOG_TO_FILE=true

# Optional: GeoIP Service
GEOIP_API_KEY=your_geoip_api_key

# Optional: Analytics
ANALYTICS_ENABLED=false
ANALYTICS_KEY=your_analytics_key
